<%- include("partials/header");-%>
<h1 class="form-label">Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="title"> Title</label>
        <input  class="form-control" type="text" name="postTitle" autocomplete="off">
        <!-- name is used to access it & if i add a value then it will be the default value for the key "name" -->

    </div>
    <div class="form-group">
        <label  class="form-label" for="body"> Post</label>
        <textarea class="form-control" name="postBody" cols="40" rows="5"></textarea>  
    </div>
    
    <button  class="btn btn-primary " type="submit" name="btn">Publish</button>
</form>


<%- include("partials/footer");-%>
